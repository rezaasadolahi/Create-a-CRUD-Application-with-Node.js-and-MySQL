<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>
        <%= title %>
    </title>
</head>

<body>
    <div class="table w-full p-2">
        <a href="/add-user"
            class="w-max bg-teal-500 text-center p-2 text-white mb-3 rounded-md hover:shadow-lg text-xs font-thin block text-lg font-medium">
            Add User
        </a>
        <table class="w-full border">
            <thead>
                <tr class="bg-gray-50 border-b">
                    <th class="p-2 border-r select-none text-sm font-thin text-gray-500">
                        <div class="flex items-center justify-center">ID</div>
                    </th>
                    <th class="p-2 border-r select-none text-sm font-thin text-gray-500">
                        <div class="flex items-center justify-center">First Name</div>
                    </th>
                    <th class="p-2 border-r select-none text-sm font-thin text-gray-500">
                        <div class="flex items-center justify-center">Last Name</div>
                    </th>
                    <th class="p-2 border-r select-none text-sm font-thin text-gray-500">
                        <div class="flex items-center justify-center">Age</div>
                    </th>
                    <th class="p-2 border-r select-none text-sm font-thin text-gray-500">
                        <div class="flex items-center justify-center">Email
                    </th>
                    <th class="p-2 border-r select-none text-sm font-thin text-gray-500">
                        <div class="flex items-center justify-center">Password</div>
                    </th>
                    <th class="p-2 border-r select-none text-sm font-thin text-gray-500">
                        <div class="flex items-center justify-center">Country</div>
                    </th>
                    <th class="p-2 border-r select-none text-sm font-thin text-gray-500">
                        <div class="flex items-center justify-center">Action</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                <% data.map(item=> { %>
                    <tr class="bg-gray-100 text-center border-b text-sm text-gray-600">
                        <td class="p-2 border-r">
                            <%= item.StudentID %>
                        </td>
                        <td class="p-2 border-r">
                            <%= item.FirstName %>
                        </td>
                        <td class="p-2 border-r">
                            <%= item.LastName %>
                        </td>
                        <td class="p-2 border-r">
                            <%= item.Age %>
                        </td>
                        <td class="p-2 border-r">
                            <%= item.Email %>
                        </td>
                        <td class="p-2 border-r">
                            <%= item.Password %>
                        </td>
                        <td class="p-2 border-r">
                            <%= item.Country %>
                        </td>
                        <td class="flex justify-center mt-2 mb-2">
                            <a href="/edite/<%= item.StudentID %>"
                                class="bg-blue-500 p-2 text-white hover:shadow-lg text-xs font-thin block font-normal">
                                ویرایش
                            </a>
                            <a href="/delete/<%= item.StudentID %>"
                                class="bg-red-500 p-2 text-white hover:shadow-lg text-xs font-thin block font-normal">
                                حذف
                            </a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>
